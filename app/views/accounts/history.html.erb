<%= link_to 'View All Accounts', accounts_path, class: "btn btn-default" %>
<h1>Account Transactions</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Deposits/Credits</th>
      <th>Withdrawals/Debits</th>
      <th>Balance <span class="text-muted">(After Transaction)</span></th>
    </tr>
  </thead>

  <tbody>
    <% @event_history.each do |event| %>
      <tr>
        <td>
          <%= event.created_at.strftime("%m/%d/%y") %>
          <span class="text-muted"><%= event.created_at.strftime("%I:%M %p") %></span>
        </td>
        <td><%= event.description %></td>
        <td>
          <span class="text-success">
            + <%= number_to_currency event.amount_deposited %>
            </span>
        </td>
        <td><%= number_to_currency event.amount_withdrawn %></td>
        <td><%= number_to_currency event.balance %></td>
      </tr>
    <% end %>
  </tbody>
<table>
